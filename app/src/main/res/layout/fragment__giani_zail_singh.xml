<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gajanan.presidentsofindia.Fragment_PratibhaDeviSinghPatil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/img_gianiZailSingh"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/gianizailsingh"/>

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#fff"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="#000"
            android:layout_gravity="center"
            android:text="Term of Office: 25 July, 1982 to 25 July, 1987"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fillViewport="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_gianiZailSingh"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="#fff"
            android:background="#000"
            android:gravity="center"
            android:text="Zail Singh  born Jarnail Singh, 5 May 1916 â€“ 25 December 1994) was the seventh President of India serving from 1982 to 1987. Prior to his presidency, he was a politician with the Indian National Congress party, and had held several ministerial posts in the Union Cabinet, including that of Home Minister. He also served as the Secretary-General of the Non-Aligned Movement from 1983 to 1986.\nHis presidency was marked by Operation Blue Star, the assassination of Indira Gandhi, and the 1984 anti-Sikh riots.He died of injuries in 1994, after a car accident."
            android:layout_weight="1.0"/>
    </ScrollView>
</LinearLayout>
